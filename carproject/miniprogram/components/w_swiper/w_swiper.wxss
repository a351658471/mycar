/* component/swiper/swiper.wxss */
.swiper_container{
  width: 100%;
}
.swiper_container .swiper-box{
  width: 100%;
  height: 400rpx;
  margin: 0 auto;
}
.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 2rpx;
}
.swiper-box .wx-swiper-dot{
    width:30rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 10rpx;
    justify-content:space-between;
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,0.8);
    border-radius: 8rpx;
}
.swiper-box .wx-swiper-dot-active::before{
    background:grey;   
}
.swiper_container .swiper-box .targetImg{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
swiper-box .swiper-box{
  width: 100rpx;
}
.indicator{
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.indicator .wx-swiper-dot{
    width:30rpx;
    height: 10rpx;
    margin-left: 25rpx;
    background:black;
    display: inline-flex;
    border-radius: 8rpx;
}
.wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,0.8);
    border-radius: 8rpx;
}
.wx-swiper-dot-active::before{
    background:grey; 
}