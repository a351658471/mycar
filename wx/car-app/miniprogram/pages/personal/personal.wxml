<!--pages/personal/personal.wxml-->
<view class="personalTitle">
  <text>个人信息</text>
</view>
<view class="personalMsg">
  <view class="personalDetail">
    <text>姓名</text>
    <input placeholder="请输入姓名" focus="true" value="{{userInfo.nickName}}"></input>
  </view>
</view>
<view class="personalMsg">
  <view class="personalDetail">
    <text>手机</text>
    <input placeholder="请输入手机" focus="true" value="{{userInfo.phone}}"></input>
    <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" size="mini">获取手机号</button>
  </view>
</view>
<view class="personalBtn" bindtap="confirm">
  <button style="width:680rpx" class="btn">确定</button>
</view>