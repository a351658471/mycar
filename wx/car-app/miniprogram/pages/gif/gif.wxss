/* pages/gif/gif.wxss */
page{
    box-sizing: border-box;
}
.gifTitle{
    font-size: 32rpx;
    color: #333333;
    font-weight: bold;
    margin: 28rpx 20rpx;
    font-family: "微软雅黑";
}
.gifWrap{
    width: 100%;
    display: flex;
    align-items: center;
    background: #FFFFFF;
    box-sizing: border-box;
    padding: 40rpx 20rpx;
    flex-wrap: wrap;
}
.gifMessage{
    width: 28%;
    height: 134rpx;
    display: flex;
    border: 1px solid #979797;
    position: relative;
    margin: 17rpx; 
}

.gifMessage .closeicon{
    width: 26rpx;
    height: 26rpx;
    position: absolute;
    right: -2rpx;
    top: -2rpx;
}
.gifMessage .gifImg{
    width: 100%;
    height: 100%;
}
.gifAdd{
    width: 28%;
    height: 134rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 20rpx;
}
.gifAdd image{
  width: 100%;
}
.gifAdd text{
   font-size: 24rpx;
   color: #ADA9A9;
   margin-top: 10rpx;
}
.gifBtn{
    width: 100%;
    position: absolute;
    bottom: 44rpx;
}
.btn{
    height: 88rpx;
    color: #FFFFFF;
    font-size: 36rpx;
    font-weight: normal;
    border-radius: 16rpx;
    background: linear-gradient(to right,#3377FE,#3377FE)
}