/* pages/shopMessage/shopMessage.wxss */
.shopmessage{
  background: #fff;
  padding: 0 32rpx;
}
.shopmessage .msg{
  border-top: 2rpx solid #DDDDDD;
  display: flex;
  padding: 20rpx;
}
.shopmessage .msg text{
  width: 140rpx;
  font-size: 28rpx;
  text-align: right;
}
.shopaddress{
  background: #fff;
  margin-top: 18rpx;
  padding: 0 32rpx;
}
.shopaddress .address{
  padding: 20rpx;
}
.shopaddress .address .copyaddress{
  display: flex;
  justify-content: space-between;
}
.shopaddress .address .copyaddress text{
  width: 140rpx;
  font-size: 28rpx;
  text-align: right;
}
.shopaddress .address textarea{
  padding: 20rpx 0;
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
}
.shopMessageBtn{
  width: 100%;
  position: absolute;
  bottom: 44rpx;
}
.btn{
  height: 88rpx;
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: normal;
  border-radius: 16rpx;
  background: linear-gradient(to right,#3377FE,#3377FE)
}
text{
  color: #4A4A4A;
}
.copybtn{
  width: 84rpx;
  height: 44rpx;
  background: #D8D8D8;
  border-radius: 8rpx;
  margin-left: 70rpx;
}
.copybtn button{
  min-height: 44rpx;
  margin: 0;
  padding: 0;
  width: 100%;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #333333;
  font-weight: normal;
}
