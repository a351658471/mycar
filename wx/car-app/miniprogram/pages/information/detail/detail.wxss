page{
  background: white;
  padding-bottom: 200rpx;
}
.detailPage{
  width: 90%;
  margin: auto
}
.header{ 
  letter-spacing: 1px;
}
.imgBox{
  width: 100%;
  margin-top: 1rem
}
.videoBox{
  width: 100%
}
.textBox{
  font-size: 15px;
  margin-top: 1rem
}
.title{
  margin:.5rem 0;
  font-size: 18px;
  color: black;
  font-weight: bold;
}
.header_author{
  display: flex;
  font-size: 13px;
  color: #969696;
  margin-top: 30rpx;
}
.share{
  margin: 0;
  padding: 0 50rpx;
  background: #F58423;
  color: #FFFFFF;
  font-weight: normal;
  border-radius: 38rpx;
  position: fixed;
  bottom: 3vh;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
}
