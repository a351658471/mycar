<wxs src="../../../../utils/filter.wxs" module="formatTime"></wxs>
  <view>
    <block wx:for="{{newsList}}">
       <view class='item' bindtap='detail' data-item="{{item}}">
        <view class='topText'>
          {{item.title}}
        </view>
        
        <!-- video -->
         <view wx:if="{{item.cover[0].type== 'video'}}">
             <video src="{{item.cover[0].content}}" controls="{{false}}" direction style='width:100%;height:194px;border-radius:4px;'></video>
        </view> 
        <!-- image -->
        <view wx:else class='carBox' data-imgurl="{{item.cover}}">
          <view class="imgBox" wx:for="{{item.cover}}" wx:for-item="imgItem">
              <image class="carImg" src="{{imgItem.content}}" mode="widthFix" style="width:100%;"></image>
          </view>
          
        </view>

        <view class='bottom'>
          <view class='bottomLeft'>
            {{item.provide}}
          </view>
         <view class='bottomRight'>
            {{formatTime.formatTime(item.update_time,'yyyy/mm/dd')}}
          </view>
        </view>
      </view>
      </block>
      <view class="loadMore" bindtap="loadMore" wx:if="{{!noMore}}">{{isLoading?'加载中...':'点击加载更多'}}</view>
    </view>
