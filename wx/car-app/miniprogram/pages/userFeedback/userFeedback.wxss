/* pages/advise/advise.wxss */
.advisetitle{
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin: 28rpx 20rpx;
  font-family: "微软雅黑";
}
.advisemessage textarea{
  width: 100%;
  height: 360rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  padding: 40rpx 36rpx; 
  word-wrap: break-word; 
  font-size: 30rpx;
  color: #666;
}
.adviseBtn{
  width: 100%;
  position: absolute;
  bottom: 44rpx;
}
.btn{
  height: 88rpx;
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: normal;
  background: linear-gradient(to right,#3377FE,#3377FE);
}