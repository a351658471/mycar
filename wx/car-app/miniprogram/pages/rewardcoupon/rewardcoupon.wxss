/* miniprogram/pages/coupon/coupon.wxss */

.couponContent{
    box-sizing: border-box;
    padding: 22rpx 24rpx;
    margin: 22rpx 22rpx 0 22rpx;
    background: #FFFFFF;
    border: 1rpx solid #E1E1E1;
    border-bottom: none;
    border-radius: 6rpx 6rpx 0 0;
}
.couponHead{
    display: flex;
    justify-content: space-between;
}
.couponTitle{
    font-size: 28rpx;
    color: #131E33;
    font-weight: bold;
    padding-bottom: 20rpx;
}
.couponEdit{
    font-size: 24rpx;
    color: #717171;
}
.couponDetail{
    font-size: 24rpx;
    color: #333333;
    margin-top: 2rpx;
}
.couponNum{
    font-size: 30rpx;
    color: #7B7575;
    text-align: right;
    font-weight: bold;
    flex: 1;
}
.coupondegree{
  font-size: 28rpx;
  color: #7B7575;
  font-weight: bold;
}
.couponMsg{
    display: flex;   
    margin-top: 18rpx;
}
.msgTop{
    margin-top: 40rpx;
}
.couponIntegral{
    font-size: 24rpx;
    color: #3377FE;
    flex: 1;
}
.couponLastTime{
    font-size: 20rpx;
    color: #7E7C81;
}
.couponControl{
    box-sizing: border-box;
    padding: 22rpx 24rpx;
    margin: 0 22rpx;
    background: linear-gradient(to bottom,#FFFFFF,#F8F8F8);
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1rpx solid #E1E1E1;
    border-radius: 0 0 6rpx 6rpx;
}
.couponUse{
    margin: 0;
    padding: 0;
    width: 96rpx;
    height: 50rpx;
    color: #717171;
    font-size: 26rpx;
    line-height: 45rpx;
    border: 1rpx solid #E3E3E3;
}
.couponDelete{
    font-size: 26rpx;
    color: #717171;
}
.load{
  width: 100%;
  padding: 0 0 100rpx 0;
}
.loading{
  text-align: center;
  font-size: 28rpx;
  color: #555;
  padding: 20rpx;
}
.rightBox{
    width: 100%;
    position: fixed;
    bottom: 0;
    background: #3377FE;
    color: #FFFFFF;
    font-size: 36rpx;
    text-align: center;
    padding: 16rpx 0 22rpx 0;
}
.couponQuery{
    font-size: 24rpx;
    color: #131E33;
}
.couponone,.coupontwo{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-size: 20rpx;
}
.coupontwo{
    margin-right: 10rpx;
    align-items: flex-end;
}
.coupons{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.couponBuy,.couponBuyCount{
  margin-top: 15rpx;
}
.couponName,.couponphone,.couponNumber,.couponQueryTime{
  margin-top: 6rpx;
}
.couponNumber,.couponQueryTime,.couponBuyCount{
    color: #7E7C81;
}
.historyInput{
  border: 1rpx solid #979797;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 16rpx 30rpx;
  font-size: 24rpx;
  margin: 20rpx 40rpx 0 40rpx;
  color: #7E7C81;
}