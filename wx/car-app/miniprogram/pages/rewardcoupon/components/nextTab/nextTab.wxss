/* components/leftTab/leftTab.wxss */
.tab{
   width: 100%;
   display: flex;
   justify-content: space-between;
   align-items: center;
   box-sizing: border-box;
   padding: 20rpx 34rpx;
}
.leftTab{
  display: flex;
  align-items: center;
}
.tabItem{
  box-sizing: border-box;
  padding: 12rpx 20rpx;
  margin-right: 32rpx;
}
.active{
  color: #3377FE;
  position: relative;
  background: #fff;
  border-radius: 6rpx;
  border: 1rpx solid #F4F4F4;
}
