<!--miniprogram/pages/addNewCar/detail/detail.wxml-->
<!-- 详情介绍 -->
<view>
   <view class="labelHeader">
      <view class="labelTitle">
              详情介绍
       </view>
      <view class="detailSave">
          <view class="rightItem" bind:tap="saveEvent" >保存</view>
          <view class="rightItem" bind:tap="upEvent">上架</view>
      </view>
    </view>
      <view class="container1" id="container">

      <view wx:for="{{dataList}}">
       <!-- 文本内容 -->
        <!-- <view wx:if="{{item.type == 'text'}}" bind:tap="textEvent" data-index="{{index}}">
          {{item.content}}
        </view> -->
        <view wx:if="{{item.type == 'text'}}" style="font-size:30rpx; padding:20rpx 0">
            <textarea wx:if="{{currentText == index}}" bindblur="editTextBulr" style="width:100%" focus value="{{textContent}}"></textarea>
            <view wx:else data-item="{{item}}" data-index="{{index}}" bindtap="textEvent">{{item.content}}</view>
          </view>
        <!-- 图片内容 -->
        <view class="imgContent" wx:if="{{item.type == 'image'}}">
            <view class="videoDelete" bindtap="imgDelete" data-index="{{index}}">
              <image src="/assets/del.png" mode="widthFix"></image>
            </view>
            <image src="{{item.content}}" mode="widthFix" style="width:100%"></image>
        </view>
        <!-- 视频 -->
        <view class="imgContent" wx:if="{{item.type == 'video'}}">
          <view class="videoDelete" bindtap="videoDelete" data-index="{{index}}">
              <image src="/assets/del.png" mode="widthFix"></image>
            </view>
            <video src="{{item.content}}" style="width:100%"></video>
        </view>
      </view>
       <textarea placeholder="{{placeholder}}" bindblur="textBulr" style="width:100%" value="{{textValue}}"></textarea>
      </view>


      <view class="toolbar" catchtouchend="format">
        <i class="iconfont icon-tupian iconItem" catchtouchend="insertImage"></i>
        <i class="iconfont icon-dilanxianxingiconyihuifu_huabanfuben iconItem" catchtouchend="insertVideo"></i>
    </view>
</view>
