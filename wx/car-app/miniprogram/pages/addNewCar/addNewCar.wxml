<view class="addCar">
  <form>
    <view class="baseInfo">
        <view class="baseTitle">
          基本信息
        </view>
        <view class="baseContent">
          <view class="borderBottom">
            <view class="baseItem">
              <view class="ItemName">车辆类型</view>
              <view class="radioItem">
              <radio-group bindchange="radioChange" name="cNew">
               <radio class="radio" value="oldcar" checked>二手车</radio>
               <radio class="radio" value="newcar">新车</radio>
               </radio-group>
              </view>
             </view>
          </view>
        <view class="borderBottom">
          <view class="baseItem">
              <view class="ItemName">销售价格</view>
              <view class="inputItem">
                <input type="text" name="cPrice" bindblur="blurEvnet1" placeholder="必填" placeholder-style="color:#FE2A45;font-size:0.95rem;font-weight:bolder"></input>
              </view>
          </view>
        </view>

        <view class="borderBottom">
          <view class="baseItem">
                <view class="ItemName">品牌车型</view>
                <view class="inputItem">
                  <input type="text" name="cBrand" placeholder="必填" placeholder-style="color:#FE2A45;font-size:0.95rem;font-weight:bolder"></input>
                </view>
            </view>
        </view>

        <view class="borderBottom">
          <view class="baseItem">
                <view class="ItemName">表显里程</view>
                <view class="inputItem">
                  <input type="text" name="cmileage" placeholder="必填" placeholder-style="color:#FE2A45;font-size:0.95rem;font-weight:bolder"></input>
                </view>
            </view>
        </view>

        <view class="borderBottom">
          <view class="baseItem" wx:if="{{isOld}}">
                <view class="ItemName">初次上牌</view>
                <view class="inputItem">
                  <input type="text" name="cFirst" placeholder="必填" placeholder-style="color:#FE2A45;font-size:0.95rem;font-weight:bolder"></input>
                </view>
          </view>
        </view>

        <view class="borderBottom">
          <view class="baseItem">
                <view class="ItemName">排放标准</view>
                <view class="inputItem">
                  <input type="text" name="cStandard" placeholder="请输入排放标准" placeholder-style="font-size:0.95rem"></input>
                </view>
          </view>
        </view>
        <view class="borderBottom">
          <view class="baseItem">
                <view class="ItemName">发动机</view>
                <view class="inputItem">
                  <input type="text" name="cEngine" placeholder="请输入发动机信息" placeholder-style="font-size:0.95rem"></input>
                </view>
          </view>
        </view>

        <view class="borderBottom">
          <view class="baseItem">
                <view class="ItemName">马力</view>
                <view class="inputItem">
                  <input type="text" name="cHorse" placeholder="请输入马力" placeholder-style="font-size:0.95rem"></input>
                </view>
          </view>
        </view>
      </view>
    </view>

    <view class="labelBox">
      <view class="label"> 
        <view class="labelHeader">
          <view class="labelTitle">
              标签
          </view>
          <view class="labelAdd" bindtap="addLabel">
            添加
          </view>
        </view>
          
        <view class="labelItem">
          <view wx:for="{{labelList}}" style="display:flex;margin-right:1.5rem">
            <view class="labelText">{{item}}</view>
            <view class="deleteIcon" bindtap="deleteLabel" data-index="{{index}}"></view>
          </view>
          <view style="width:4rem" wx:if="{{isEnter}}">
              <input type="text" confirm-type="done" focus="true" bindblur="enterBlur" bindconfirm="enterEvent"></input>
          </view>
        </view>
      </view>
    </view>

    <view class="imgBox">
          <view class="labelTitle">
                滚动图
          </view>
          <view style="width:100%; background:#fff">
          <view style="padding:0 5vw">
          <view class="addImgBox">
            <view class="imgItem">
              <image class="itemImg" src="/assets/1.jpg" mode="widthFix"></image>
              <view class="deleteImg">
                <image src="/assets/删除.png" mode="widthFix"></image>
            </view>
            </view>

            <view class="itemAdd">
              <image src="/assets/图片.png" mode="widthFix"></image>
              <view>{{imgList.length==0 ?"添加图片":"继续添加"}}</view>
            </view>

          </view>
          </view>
          </view>
    </view>

  </form>
</view>
