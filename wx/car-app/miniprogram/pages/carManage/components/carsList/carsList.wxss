/* components/carsList/carsList.wxss */
.carList{
  box-sizing: border-box;
  padding: 0 32rpx;
}
.Item{
  margin-bottom: 16rpx;
}
.mview{
  
  background: #fff;
}
.carItem{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding:14rpx;
  border: 2rpx solid #E1E1E1;
  border-bottom:none;
  border-radius:6px 6px 0px 0px; 
}

.carImg{
  width: 236rpx;
  height:158rpx;
}

.carImg image{
  width: 100%;
  height: 100%;
}

.carMsg{
  width:  55%;
  margin-left: 24rpx;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}
.carMsgname{
  font-size:26rpx; 
  font-weight: bold;
  text-overflow:ellipsis; 
  overflow:hidden; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;

}
.carMsgprice{
  color:#EA1919;
  font-size:30rpx;
  font-weight:bold
}
.menu{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
  padding: 12rpx 18rpx;
  border: 2rpx solid #E1E1E1;
  border-radius:0px 0px 6px 6px
}
.menu .menu-block{
  display: flex;
}
.menu .menu-block .menu-item{
  color: #717171;
  font-size: 26rpx;
}
.menu .menu-block .tShelves,.menu .menu-block .sold{
  border: 2rpx solid #E3E3E3;
  box-sizing: border-box;
  padding: 6rpx 11rpx;
  border-radius: 6rpx;
}
.menu .menu-block .sold{
  margin-left: 44rpx;
}
.menu .menu-block .stick{
  padding-right: 88rpx;
}
.loadMore{
  width: 100;
  text-align: center;
  height: 10vw;
  line-height: 10vw;
  background: #fff;
  color: #777;
  font-size: 30rpx;
}
.noMore{
  width: 100;
  text-align: center;
  height: 10vw;
  line-height: 10vw;
  background: #F5F5F5;
  font-size: 30rpx
}