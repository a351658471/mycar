/* components/carsList/carsList.wxss */
.area{
  width:38vw;
  height:100%;
  margin-bottom: 0.5rem;
}
.mview{
  width: 100vw;
  height: 35vw;
  z-index: 999;
  background: #fff
}
.carItem{
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0 44rpx;
}

.carImg{
  position: relative;
  width: 45%;
  height:30vw;
  box-sizing: border-box;
}

.carImg image{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 12rpx;
}

.carMsg{
  width:  55%;
  margin-left: 40rpx;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}
.carMsgname{
  font-size:32rpx; 
  font-weight: bold;
  text-overflow:ellipsis; 
  overflow:hidden; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;

}
.carMsgprice{
  color:#EA1919;
  font-size:30rpx;
  font-weight:bold
}
.menu{
  display: flex;
  height: 35vw;
  width: 60vw;
  line-height: 38vw;
  font-size: 24rpx;
}
.menu-item{
  width: 33.3%;
  text-align: center;
  color: #FFFAFF
}
.loadMore{
  width: 100;
  text-align: center;
  height: 10vw;
  line-height: 10vw;
  background: #fff;
  color: #777;
  font-size: 30rpx;
}
.noMore{
  width: 100;
  text-align: center;
  height: 10vw;
  line-height: 10vw;
  background: #F5F5F5;
  font-size: 30rpx
}