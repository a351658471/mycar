/* miniprogram/pages/reward/reward.wxss */
.reward{
    box-sizing: border-box;
    padding: 12rpx 48rpx 20rpx 48rpx;
}
.rewardContent{
    display: flex;
    align-items: flex-end;
    justify-content: center;
    color: #3377FE;
    font-weight: bold;
}
.rewardNum{
    display: flex;
    align-items: flex-end;
    font-size: 96rpx;
}
.rewards{
    font-size: 40rpx;
    margin-left: 52rpx;
}
.rewardWarns{
    display: flex;
    justify-content: space-between;
    margin-top: 48rpx;
}
.rewardWarn{
    font-size: 20rpx;
    color: #4A4A4A;
    display: flex;
    flex-direction: column;
    align-items: center;
}

