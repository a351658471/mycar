<view class='outBox'>
  <scroll-view class='crollView' scroll-y style="height:100%">

    <!-- 轮播图 -->
    <view style="margin-top:18rpx;">
      <my-swiper imgList="{{shop.swipers}}" isSwpDot="{{true}}" bind:previewImage="previewImage"></my-swiper>
    </view>
    <!-- tab -->
    <view style="margin:34rpx auto 22rpx 46rpx;">
        <my-ltab bind:tabClick="tabClick"></my-ltab>
    </view>

    <!-- 车列表 -->
    <my-carslist carData="{{resData}}" bind:caritemClick="caritemClick" bind:loadMore="loadMore" isLoading="{{isLoading}}" noMore="{{noMore}}"></my-carslist>
  </scroll-view>

</view>
<view class="call">
    <my-call class="callIcon" bind:call="call" phoneNumber="{{shop.phone}}"></my-call>
  </view>