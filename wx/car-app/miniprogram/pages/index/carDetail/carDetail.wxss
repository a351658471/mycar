/* pages/home/home.wxss */
page{

  height:100%
}
.outbox{
  height: 100%
}
.sold{
  position: absolute;
  /* z-index: 2; */
  width: 174rpx;
  height: 178rpx;
  top: 0;
  left: 0;
}
.carDetail{
  box-sizing: border-box;
  padding: 24rpx 42rpx 44rpx 42rpx;
  width:100%;
  background-color: #FFFFFF;
}
.heard-name{
  width: 95%;
  font-size: 34rpx;
  font-weight: bold;
}
.heard-right{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  height:5vw
}
.share{
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 6rpx;
}
.share image{
  width: 46rpx;
  height: 46rpx;
}
.share text{
  font-size: 22rpx;
  color: #4A4A4A;
}
.detail-heard{
  width: 100%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.detail-in{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}
.detail-body{
  width: 100%;
  font-size: 36rpx;
  margin: 46rpx auto 0 auto;
  display: flex;
  justify-content: space-between
}
.body-left{
  max-width: 74%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.bottomBox{
  background: #FFFFFF;
  margin-top: 28rpx;
}

.backgournd{
  position:fixed;
  top:0;
  bottom:0;
  right:0;
  left:0;
  background-color:rgb(0,0,0,0.6);
  display:flex;
  align-items:flex-end;
  align-content:center;
}
.binner{
   text-align:center;
   width:100%;
   height:40vw;
   background:#FFFFFF;
   border-radius:10px 10px 0 0;
   display:flex;
   flex-direction:column;
   justify-content:space-between;
}
.bitem{
  height:13vw;
  line-height: 11vw
}
.hoverClass{
  background: #dbdbdb
}
.callIcon{
  position: fixed;
  right:22rpx;
  bottom: 30%;
}
.boxBox{
  height: 20%;
  width: 100%;
  background: #fff
}


/* 分享 */
.shareBox{
  background: rgb(0,0,0,0.6);
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0
}
.nullBox{
  position: absolute;
  top: 0;
  bottom: 30vh;
  left: 0;
  right:0;
}
.boxBottom{
  position: absolute;
  bottom: 0;
  left: 0;
  right:0;
  background: #fff;
  display: flex;
  flex-direction:column;
}
.title{
  height:11vw;
  line-height: 11vw;
  text-align: center;
  font-size: 35rpx;
}
.shareContent{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 0;
}
.shareImg{
  width:13vw;
  margin: 0 auto
}
.shareText{
  font-size: 13px;
  font-weight: normal;
}
.cancel{
  font-size: 35rpx;
  color: #FF001F;
  height:14vw;
  line-height: 14vw;
  text-align: center;
  border-top: 1px solid #dbdbdb
}
