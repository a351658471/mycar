/* 画布区域 */
.cardBox{
  position: absolute;
  width: 100%;
  height:45%;
  background: #FD5A78;
}
.cardBox .cartitle{
  color: #fff;
  font-size: 45rpx;
  text-align: center;
  padding: 90rpx 0;
}
.canvasBox{
  position: absolute;
  top: 110%;
  left: 50%;
  transform: translate(-50%,-50%);
  border: 14rpx solid #F95D74;
  box-shadow: 0px 2px 9px 0px rgba(0,0,0,0.29);
}

.downCard{
  width: 60%;
  height:13vw;
  border-radius: 25px;
  background:#FDB926;
  line-height: 13vw;
  text-align: center;
  margin: 8vw auto;
  font-size: 35rpx;
}