/* 画布区域 */
.cardBox{
  position: absolute;
  width: 100%;
  height:100%;
  background-image: linear-gradient(to bottom,#FFD146,#FE454D)

}
.canvasBox{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 10px
}

.downCard{
  width: 60%;
  height:13vw;
  border-radius: 30px;
  background:#FFE226;
  line-height: 13vw;
  text-align: center;
  margin: 5vw auto
}