<!--pages/home/home.wxml-->
<view class='outbox'>

<scroll-view scroll-y style='height:100%'>
  <!-- 轮播图组件 -->
  <my-swiper imgList="{{carData[0].data.imgList}}" isMyDots="{{true}}" swiperWidth="100%" bRadius="0"></my-swiper>

  <!-- 报价 -->
  <view class='carDetail'>
    <view class='detail-heard'>
        <view class="heard-name">{{carData[0].name}}</view>
        <view class="heard-right">{{carData[0].oldlevel[0] ==0 ?'全新':'二手'}}</view>
    </view>
    <view class='detail-body'>
      <view class='body-left'>
          <block wx:for="{{carData[0].data.labelList}}">
              <view class='left-item'>{{item}}</view>
          </block>
      </view>
      <view class='body-right' style='color:#D0435A'>
        ￥{{carData[0].price}}
      </view>
    </view>
  </view>

  <!-- detail -->
  <view class="bottomBox">
   <!-- tab -->
  <my-tab tabList="{{tabList}}" fontSize="13px" bind:tabClick="tabClick"></my-tab>

  <view wx:if="{{currentIndex == 0}}" style='background:#fff; width:100%;padding-top:2vw'>
   <block wx:for="{{carData[0].data.detail}}">
      <view style='width:90%; height:170px; margin:0 auto' wx:if="{{item.type == 'image'}}">
         <image src='{{item.content}}' mode="scaleToFill" style='width:100%; height:170px'></image>
      </view>
      <!-- 视频 -->
      <view style='width:90%; height:170px; margin:0 auto' wx:if="{{item.type == 'video'}}">
        <video src="{{item.content}}"></video>
      </view>

      <view style='width:90%; margin:1vw auto; font-size:14px' wx:if="{{item.type == 'text'}}">
         {{item.content}}
      </view>
   </block>
  </view>


    <view wx:elif="{{currentIndex == 1}}" style='width:100%; background:#fff'>
    <view style='width:90%; margin:0 auto;border-top:1px solid #E8E5E9'>
      <view wx:for="{{carData[0].data.params}}"  style='padding:0.5rem 0; border-bottom:1px solid #E8E5E9; font-size:14px;display: flex;'>
            <view style='width:5rem'>
              {{paramsEnum[item.type]}}
            </view>
            <view>
              {{item.content}}
            </view>
       </view>
    </view>
   </view>
  </view>

  </scroll-view>
  <my-call class="callIcon" bind:call="call"></my-call>

  <!-- call -->
  <view class="backgournd" bindtap='chooseShare' wx:if="{{hideShare}}">
    <view class="binner">
      <view bind:tap="copyEvent" hover-class="hoverClass" hover-stay-time="100" style="height:15vw;line-height:15vw;border-bottom:1px solid #E9E6EA;border-radius:10px 10px 0 0;text-align:center">
        186-5088-3333(微信同号)<i class="iconfont icon-ai-copy" style="margin-left:2vw"></i>
      </view>
      <view bind:tap="callEvent" hover-class="hoverClass" hover-stay-time="100" class="bitem"  style="border-bottom:1.5vw solid #E9E6EA">呼叫</view>
      <view bindtap="backEvent" hover-class="hoverClass" hover-stay-time="100" class="bitem" >取消</view>
    </view>
</view>
</view>
