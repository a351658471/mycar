/* components/leftTab/leftTab.wxss */
.outerBox{
  width: 100%;
 height:9vh;
 
}
.tab{
   width: 90%;
   margin: auto;
   height:9vh;
   line-height: 9vh;
   display: flex;
   justify-content: space-between;
   align-items: center
}
.leftTab{
  display: flex;
}
.tabItem{
  margin-right: 1rem
}
.active{
  font-weight: bolder;
  position: relative;
  font-size: 34rpx;
}
.active::after{
  content: '';
  width: 50%;
  height:5px;
  position: absolute;
  bottom: -25rpx;
  left: 25%;
  background: linear-gradient(to right,#3377FE,#3377FE);
  border-radius: 10rpx;
  box-shadow: 0px 4rpx 6rpx 0px rgba(51,119,254,0.33);
}
