page{
  background: #F5F5F5;
  height: 100%;
  
}
.addCar{
  height: 100%;
}
.scrollBox{
   height:100%;
  -webkit-overflow-scrolling: touch
}
.baseTitle,.labelTitle,.labelAdd{
  padding: 3vw;
  font-size: 32rpx;
  font-weight: bold;
}
.labelAdd{
  font-size: 26rpx;
  color: #3377FE
}
.baseContent{
  color: #7B7575;
  background: #FFFEFF;

}
.borderBottom{
  width: 100%;
  border-bottom: 1px solid #F8F6F7
}
.baseItem{
  display: flex;
  height: 13vw;
  line-height: 13vw;
  padding:0 3vw;
}
.inputItem{
  display: flex;
  align-items: center;
  margin-left: 88rpx;
  font-size: 28rpx;
}
.radioItem{
   margin-left: 88rpx;
   font-size: 28rpx;
}
.ItemName{
  width:20vw;
  text-align: right;
  font-size: 30rpx;
  color: #7B7575;
  font-weight: bold;
}
.radio{
  margin-right: 5vw
}
radio .wx-radio-input{
  width: 3vw;
  height: 3vw
}
radio .wx-radio-input.wx-radio-input-checked{
  background:#3377FE !important;
  border: 1px solid #A3A1A2 !important
}
radio .wx-radio-input.wx-radio-input-checked::before{
  content: '';
  
}
.labelItem{
  display: flex;
  align-items: center;
  background: #FFFEFF;
  font-size: 20rpx;
  padding: 25rpx 44rpx 40rpx 44rpx;
  color: #6C6C6C;
  flex-wrap: wrap;
}
.labelItem input{
  font-size: 24rpx;
}
.labelText{
  background:#F8F8FA;
  padding: 2rpx 14rpx;
  border-radius: 6rpx;
  text-align: center;
  font-size: 24rpx;
  margin-top: 15rpx; 

}
.deleteIcon image{
  width: 28rpx;
  height: 28rpx;
}
.labelHeader{
  display: flex;
  justify-content: space-between;
}
.imgBox{
  width: 100%;
}
.addImgBox{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  background: #fff;
  align-items: center;
  padding: 20rpx 0 0 0;
}
.imgItem{
  width:30%;
  height:20vw;
  position: relative;
  margin: 0 20rpx 20rpx 0;
}
.itemImg{
  width: 100%;
  height: 100%;
  border: 2rpx solid #979797;
  display: block;
}
.deleteImg{
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  right: -4rpx;
  top: 0;
}
.deleteImg image{
  width: 100%;
  height: 100%;
  display: block;
}
.picker{
  width:50vw
}
.itemAdd{
  width: 31%;
  height:24vw;
  margin-top: 10rpx;
}
.itemAdd image{
  width:100%;
  display: block;
}
.next{
  width: 90%;
  height:88rpx;
  text-align: center;
  line-height: 88rpx;
  background: linear-gradient(to right,rgb(83, 147, 243),#3377FE);
  color: #fff;
  font-size: 36rpx;
  border-radius: 16rpx;
  position: fixed;
  z-index: 9999;
  bottom: 15rpx;
  margin-left: 5%;
}

.labelHeader{
  display: flex;
  justify-content: space-between;
}
.detailSave{
  margin-right: 3vw;
  display: flex;
  width: 40%;
  justify-content: space-between;
  align-items: center
}
.showDetail{
  padding: 30rpx 0;
  width: 100%;
  background: #fff;
}
.showItem{
  width: 90%;
  margin: 0 auto .5rem auto;
}
