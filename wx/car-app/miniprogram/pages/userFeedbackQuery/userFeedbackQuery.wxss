/* pages/userFeedbackQuery/userFeedbackQuery.wxss */
page{
  box-sizing: border-box;
  padding: 40rpx;
}
.advisetitle{
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.feedback{
  width: 100%;
  background: #ffffff;
  border-radius: 10rpx;
  margin-top: 30rpx;
  box-shadow: 10rpx 10rpx 10rpx rgb(230, 230, 230);
}
.feedback .feedbackuser{
  display: flex;
  align-items: flex-start;
  padding: 40rpx 30rpx;
}
.feedback .feedbackuser .headImg{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
 .headRight{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.headRight .headname{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.headRight .headname .time{
  font-size: 24rpx;
  color: #999;
}
.headRight .name{
  font-size: 32rpx;
  font-weight: bold;
}
.headRight .contents{
   width: 500rpx;
   display: flex;
   align-items: flex-end;
}
.headRight .contents .content{
  max-width: 450rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}
.headRight .contents .tab{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}
.load{
  width: 100%;
}
.loading{
  text-align: center;
  font-size: 28rpx;
  color: #555;
  padding: 20rpx;
}