/* components/carsList/carsList.wxss */

.carItem{
  width: 100%;
  background: #fff;
  margin-bottom: 3vw;
  display: flex;
  align-items: center;
  height:38vw;
  border-radius: 15px
}

.carImg{
  position: relative;
  width: 60%;
  height:35vw;
  margin-left: 24rpx;
 
}

.carImg image{
  position: absolute;
  top: 50%;
  transform: translateY(-50%)
}

.carMsg{
  width: 40%;
  height:35vw;
  margin-left: 2vw;
  display: flex;
  flex-direction: column;
  justify-content: space-around;

}

.itemCars{
  color: #FE2A45;
  border-radius: 6rpx;
  border: 1px solid #FE2A45;
  padding: 1px 2.5px;
  margin-right: 0.5rem;

}
.loadMore{
  width: 100;
  text-align: center;
  height: 8vw;
  line-height: 8vw;
  color: #777;
  font-size: 30rpx;
}