/* components/carsList/carsList.wxss */

.carItem{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 44rpx 0;
  border-bottom: 2rpx solid #EEEEEE;
}
.carItem:last-child{
  border: none;
}

.carImg{
  position: relative;
  width: 45%;
  height:30vw;
}

.carImg image{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.carMsg{
  width: 46%;
  margin-left: 44rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.carMsgname{
  font-size:32rpx; 
  font-weight: bold;
  text-overflow:ellipsis; 
  overflow:hidden; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;

}
.itemCars{
  max-width: 130rpx;
  color: #6C6C6C;
  border-radius: 4rpx;
  background: #F8F8FA;
  box-sizing: border-box;
  padding: 5rpx 8rpx;
  margin:0 15rpx 10rpx 0;
  word-wrap: break-word;
}
.itemCars:nth-child(n+4){
  display: none;
}
.carMsgprice{
  color:#EA1919;
  font-size:30rpx;
  font-weight:bold
}
.loadMore{
  width: 100;
  text-align: center;
  height: 8vw;
  line-height: 8vw;
  color: #777;
  font-size: 30rpx;
}