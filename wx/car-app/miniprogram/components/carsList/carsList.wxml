<!--components/carsList/carsList.wxml-->
<view class='carList' style=' width:90%; margin:0 auto'>
    <block wx:for="{{carData}}" wx:key="index">
      <view class='carItem' bind:tap="caritemClick" data-item='{{item}}'>
        <view class='carImg'>
          <image src='{{item.data.imgList[0]}}' mode="aspectFill" style='width:100%;height:90%'>
          </image>
        </view>
        <view class='carMsg'>
          <view style='font-size:28rpx; text-overflow:ellipsis; overflow:hidden; white-space:nowrap'>{{item.name}}</view>
          <view style='color:#BBBBBB; font-size:24rpx'>{{item.type==0?'新车':'二手'}}</view>
          <view style='display:flex; font-size:10px; flex-wrap:wrap;'>
            <view class='itemCars' wx:for="{{item.data.labelList}}" wx:key="index">{{item}}</view>
          </view>
          <view style="color:#FE2A45;font-size:30rpx;font-weight:bold">￥{{item.price}}</view>
        </view>
      </view>
    </block>
    <view class="loadMore" bindtap="loadMore" wx:if="{{!noMore}}">{{isLoading?'加载中...':'点击加载更多'}}</view>
  </view>
