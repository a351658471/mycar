/* components/leftTab/leftTab.wxss */
.tab{
   width: 90%;
   display: flex;
   justify-content: space-between;
   align-items: center
}
.leftTab{
  display: flex;
}
.tabItem{
  margin-right: 1rem
}
.active{
  color: #333333;
  font-weight: bolder;
  position: relative;
  font-size: 34rpx !important;
  margin-top: -10rpx;
}
.active::after{
  content: '';
  width: 50%;
  height:3px;
  position: absolute;
  bottom: -0.5rem;
  left: 25%;
  background: #FE2A45;
  border-radius: 30%
}
