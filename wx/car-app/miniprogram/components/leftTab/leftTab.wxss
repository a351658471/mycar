/* components/leftTab/leftTab.wxss */
.tab{
   width: 90%;
   display: flex;
   justify-content: space-between;
   align-items: center
}
.leftTab{
  display: flex;
}
.tabItem{
  margin-right: 1rem
}
.active{
  color: #3377FE;
  font-weight: bolder;
  position: relative;
  font-size: 28rpx;
}
.active::after{
  content: '';
  width: 50%;
  height:4px;
  position: absolute;
  bottom: -0.5rem;
  left: 25%;
  background: linear-gradient(to right,#3377FE,#3377FE);
  border-radius: 10rpx;
  box-shadow: 0px 4rpx 6rpx 0px rgba(51,119,254,0.33);
}
